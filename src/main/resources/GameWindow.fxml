<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:controller="GameWindow" xmlns:fx="http://javafx.com/fxml" stylesheets="MainWindow.css"
    spacing="10" prefHeight="900" prefWidth="1700">

    <VBox>
        <MenuBar>
            <Menu text="Main Menu">
                <MenuItem fx:id="menuitSave" text="Save"/>
                <MenuItem fx:id="menuitLoad" text="Load"/>
                <MenuItem fx:id="menuitHighScore" text="High Score"/>
            </Menu>
        </MenuBar>
        
        <Pane fx:id="map" prefHeight="900" prefWidth="1440" />
    </VBox>

    <VBox spacing="10">
        <Label text="Shop">
            <style>
                -fx-font-size: 50px;
                -fx-padding: 45px;
            </style>
        </Label>
        <HBox alignment="center" spacing="10">
            <Button fx:id="btnWeapons" text="Weapons" style="-fx-font-size: 15px" />
            <Button fx:id="btnUpgrades" text="Upgrades" style="-fx-font-size: 15px" />
        </HBox>
        <Label text="TBI" />
        <Label text="TBI" />
        <Label text="TBI" />
        <Label text="TBI" />
        <Label text="TBI" />
        <Label text="Stats">
            <style>
                -fx-font-size: 50px;
                -fx-padding: 45px;
            </style>
        </Label>
        <Label fx:id="lblHealth" text="Stronghold health: 500" />
        <Label fx:id="lblCoins" text="Coins: 0" />
        <Label fx:id="lblPoints" text="Points: 0" />
        <HBox spacing="10" alignment="center">
            <Button fx:id="btnNextWave" text="Spawn Enemy" onAction="#onSpawnEnemyClicked" />
            <Button fx:id="btnSave" text="Save" />
            <Button fx:id="btnLoad" text="Load" />
        </HBox>
    </VBox>
</HBox>